@media screen and (min-width: 768px) and (max-width: 992px)
	.page
		.container
			.col-sm-8
				width 100%

			.col-sm-offset-2
				margin-left 0


/*
	About
*/

#fiveStepProcessList
	padding 0
	overflow hidden

	li
		list-style-type none

	> li //Step Titles & Blocks
		display inline-block
		width 20%
		float left
		color $secondary
		font-weight 600
		text-transform uppercase

		ul //Step Descriptions
			padding 0
			text-transform none
			font-weight normal
			color $text-color
			font-size 0.9rem

	@media screen and (max-width: 525px)

		> li
			width 100%
			margin-bottom 1.2rem

			ul
				font-size 1rem

h6.subtitle
	margin-bottom 0
	font-style italic
	font-size 1rem

h3.has-subtitle
	margin-top 0.5rem


/*
	Contact
*/

.contact-submit

	input[type="submit"]
		border-radius 3px
		height 45px
		background-color $primary
		border none


/*
	Services
*/

// Pricing Table
.ptp-pricing-table

	.ptp-three-col
		width 33%
		padding 0

		@media screen and (max-width: 768px)
			width 100%

	.ptp-most-popular
		//margin-bottom 0

	.ptp-price // IMPORTANT: Remove this if you want to display the prices
		display none

	.ptp-bullet-item
		padding 0.5em !important

	.ptp-plan
		color #FFF

.ptp-plan

	.ptp-col-id-0 & // Executive
		background-color $purple

	.ptp-col-id-1 & // Professional
		background-color $green

	.ptp-col-id-2 & // Basic
		background-color $orange





