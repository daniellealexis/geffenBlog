/*
	Base Styles
*/

body
html
	font-size 16px
	color $text-color

a // Links
.markup-format a
	color $primary

	&:hover
		color darken($primary, 20%)

/*
	Header
*/

.top-header
	.custom-logo
	img
		max-width 250px
		height auto

#header
	.bottom-header
		span.span-dot
			color $secondary

/*
	Header Menu
*/

#header
	.top-header
		.header-navigation
			ul li
				a:hover
					color $primary

				&.menu-item-has-children
					.sub-menu
						li a:hover
							color $secondary

/*
	Footer
*/

#footer

	.footer-logo
		text-align center !important

		img
			max-width 250px
			width 100%


	.copyright
		display none

	.widget ul
		li
			&::before
				color $secondary

			a:hover
				color $secondary


